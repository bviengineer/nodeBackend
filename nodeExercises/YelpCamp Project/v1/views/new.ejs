<% include partials/header %>

<div class="container">
    <div class="row"> 
        <h1 style="text-align: center">Create a New Campground</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/campgrounds" METHOD="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="newCampgroundName" placeholder="name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="newCampgroundImage" placeholder="img url">
                </div>
                <button class="btn btn-lg btn-primary btn-block">Submit!</button>
            </form>
            <a href="/campgrounds">Go back</a>
        </div>
    </div>
</div>

