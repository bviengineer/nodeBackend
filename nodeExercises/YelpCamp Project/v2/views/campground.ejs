<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Campgrounds Listings</h1>
            <p>View our hand-picked campgrounds from all over the world</p>
            <p> 
                <a class="btn-primary btn-lg" href="/campgrounds/new">Add new campground</a>
            </p>
        </div>
    </header>
    <div class="row">
        <div class="col-lg-12">
            <h3>Our Most Popular Campgrounds</h3>
        </div>
    </div>
    <div class="row">
        <% for(var i =0; i < campgroundsContainer.length; i++){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img src="<%= campgroundsContainer[i].image; %>">
                    <div class="caption text-center">
                        <h4> <%= campgroundsContainer[i].name; %> </h4>  
                    </div>
                </div>
            </div>
        <% } %>
    </div>
