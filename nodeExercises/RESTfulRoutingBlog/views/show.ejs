<% include ./partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header"><%= blogsContainer.title %>
        <div class="ui top attached">
            <div class="item">
                <img class="ui centered rounded image" src="<%= blogsContainer.image; %>">
                <div class="content">
                    <span><%= blogsContainer.created.toDateString() %></span>                
                </div>
                <div class="description">
                    <p><%= blogsContainer.body %></p>          
                </div>
                <a class="ui orange basic button" href="/blogs/<%= blogsContainer._id %>/edit">Edit</a>
                <form id="delete" action="/blogs/<%= blogsContainer._id %>?_method=DELETE" method="POST">
                    <button class="ui red basic button">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

<% include ./partials/footer %>