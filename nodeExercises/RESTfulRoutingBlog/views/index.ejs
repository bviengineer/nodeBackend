<% include ./partials/header %>

<div class="ui main text container">
       <div class="ui huge header">RESTful Blog App</div>
       <div class="ui top attached segment">
              <div class="ui divided items">
                     <% for(var i = 0; i < blogsContainer.length; i++){ %> 
                            <div class="item">
                                   <div class="image">
                                          <img src="<%= blogsContainer[i].image; %>">
                                   </div>
                                   <div class="content">
                                          <a class="header" href="/blogs/<%=blogsContainer[i]._id %>"><%= blogsContainer[i].title %></a>
                                          <div class="meta">
                                                 <span><%= blogsContainer[i].created.toDateString() %></span>
                                          </div>
                                          <div class="description">
                                                 <% if(blogsContainer.body && blogsContainer.body.length > 0) { %>
                                                        <p><%- blogsContainer[i].body.substring(0, 100) %>...</p>
                                                 <% } %>               
                                          </div>
                                          <div class="extra">
                                                 <a class="ui floated basic violet button" href="/blogs/<%=blogsContainer[i]._id %>">Read More</a>
                                                 <i class="right chevron icon"></i>
                                          </div>
                                   </div>
                            </div>
                     <% } %> 
              </div>
       </div>
</div>

<% include ./partials/footer %>

