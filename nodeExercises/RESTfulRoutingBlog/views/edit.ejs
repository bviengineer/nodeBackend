<% include ./partials/header %>

<h6>EDIT PAGE</h6>
<div class="ui main text container segment">
    <div class="ui huge header">Edit <%= blogsContainer.title %></div>
    <form class="ui form" action="/blogs/<%= blogsContainer._id %>?_method=PUT" method="POST">
        <div class="field">
            <label>Title</label> 
            <input type="text" name="blog[title]" value="<%= blogsContainer.title %>">
        </div>
        <div class="field">
            <label>Image</label>
            <input type="text" name="blog[image]" value="<%= blogsContainer.image %>">
        </div>
        <div class="field">
            <label>Blog Content</label>
            <textarea name="blog[body]">"<%= blogsContainer.body %>"</textarea>
        </div>
            <input class="ui violet big basic button" type="submit">            
        </div>
    </form>
</div>

<% include ./partials/footer %>